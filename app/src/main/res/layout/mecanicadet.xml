<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorFundo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textoVideo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:paddingLeft="10sp"
                android:paddingTop="10sp"
                android:paddingRight="10sp"
                android:paddingBottom="10sp"
                android:text="Aula 1 -  Unidades de Medidas"
                android:textSize="18sp"
                app:fontFamily="casual" />

            <ImageView
                android:id="@+id/videoMec1"
                android:layout_width="match_parent"
                android:layout_height="243dp"
                android:layout_marginTop="10sp"
                android:padding="10sp"
                app:srcCompat="@drawable/acaomecuni" />

            <TextView
                android:id="@+id/textoPosmec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:text="Agora ficou fÃ¡cil!"
                android:textSize="16sp"
                app:fontFamily="casual" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button2"
                style="?attr/buttonBarButtonStyle"
                android:layout_width="252dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFDFD"
                android:drawableLeft="@drawable/ic_gostei_black_24dp"
                android:padding="10sp"
                android:paddingLeft="10sp"
                android:paddingTop="10sp"
                android:paddingRight="10sp"
                android:paddingBottom="10sp"
                android:text="GOSTEI" />

            <Button
                android:id="@+id/button"
                style="?attr/buttonBarButtonStyle"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFDFD"
                android:drawableLeft="@drawable/ic_comentario_bubble_black_24dp"
                android:padding="10sp"
                android:paddingLeft="10sp"
                android:paddingTop="10sp"
                android:paddingRight="10sp"
                android:paddingBottom="10sp"
                android:text="COMENTAR" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
